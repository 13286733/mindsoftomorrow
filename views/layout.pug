	body.nav-on-header.smart-nav
		// Navigation bar
		nav.navbar(style='')
			.container
				// Logo
				.pull-left
					a.navbar-toggle(href='#', data-toggle='offcanvas')
						i.fa.fa-bars
					.logo-wrapper
						a.logo(href='/')
							img(src='assets/LogoMakr_0xQ6NP_38b0fe.png', alt='logo')
						a.logo-alt(href='/')
							img(src='assets/LogoMakr_0xQ6NP_38b0fe.png', alt='logo-alt')
				// END Logo
				// User account
				.pull-right.user-login
					a.btn.btn-sm.btn-success(href='/signin') Sign In
					a.btn.btn-sm.btn-primary(href='/signup') Sign Up
				// END User account
				// Navigation menu
				// END Navigation menu
