                            .checkbox
                                input#tuesday(name='tuesday', type='checkbox', value='on')
                                label(for='tuesday')
                                    | Tuesday
                                    small (684)
                            .checkbox
                                input#Wednesday(name='Wednesday', type='checkbox', value='on')
                                label(for='Wednesday')
                                    | Wednesday
                                    small (195)
                            .checkbox
                                input#Thursday(name='Thursday', type='checkbox', value='on')
                                label(for='Thursday')
                                    | Thursday
                                    small (39)
                            .checkbox
                                input#Friday(name='Friday', type='checkbox', value='on')
                                label(for='Friday')
                                    | Friday
                                    small (39)
                            .checkbox
                                input#Saturday(name='Saturday', type='checkbox', value='on')
                                label(for='Saturday')
                                    | Saturday
                                    small (39)
                            .checkbox
                                input#Sunday(name='Sunday', type='checkbox', value='on')
                                label(for='Sunday')
                                    | Sunday
                                    small (39)
                .button-group
                    .action-buttons
                        button.btn.btn-primary Apply filter
    // END Page header
    // Main container
    main
        section.no-padding-top.bg-alt
            .container
                .row
                    .col-xs-12
                        br
                        h5
                            | We found 
                            strong #{results.length}
                            |  matches
                    // Job item
                
                #results
                    
                    // END Job item
                // Page navigation
                nav.text-center
                    ul.pagination
                        li
                            a(href='#', aria-label='Previous')
                                i.fa.fa-angle-left
                        li.active
                            a(href='#') 1
                        li
                            a(href='#', aria-label='Next')
                                i.fa.fa-angle-right
                // END Page navigation
    // END Main container

block scripts
    script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js")
    script.
        var results = !{JSON.stringify(results)};
        var html = "";
        results.forEach(function(student) {
            var availability = student.Availability.split(',').reduce((a, b) => { return Number(a) + Number(b) });
            html += `<div class="col-xs-12">
                <a class="item-block" href="/details">
                <header>
                    <div class="hgroup">
                        <h4>` + student.Name + `</h4>
                        <h5>` + student.Education + `<span class="label label-success">Full-time</span></h5>
                </header>
                <div class="item-body">
                    <p>` + student.Experience + `</p>
                </div>
                <footer>
                    <ul class="details cols-3">
                        <li><i class="fa fa-map-marker"></i><span>` + student.Location + `</span></li>
                        <li><i class="fa fa-money"></i> Paid<!--<span>$90,000 - $110,000 / year</span>--></li>
                        <li><i class="fa fa-certificate"></i><span>Available ` + availability + ` days</span></li>
                    </ul>
                </footer></a>
            </div>`;
        });

        $('#results').append(html);